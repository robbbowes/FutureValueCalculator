@model FutureValueModel
@{
    ViewBag.Title = "Future Value Calculator";
}
<div class="container">

    <header class="jumbotron">
        <h1 class="mt-3">@ViewBag.Title</h1>
    </header>

    <main>

        <div class="alert alert-success alert-dismissive">
            <button class="close" data-dismiss="alert">&times;</button>
            <p>This site is for educational purposes only</p>
        </div>

        <form class="form-horizontal" asp-action="Index" method="post">

            <div class="row">
                <label class="control-label col-3" asp-for="MonthlyInvestment">Monthly Investment:</label>
                <input class="form-control col-3" asp-for="MonthlyInvestment" />
                <span class="text-danger col" asp-validation-for="@Model.MonthlyInvestment"></span>
            </div>

            <div class="row">
                <label class="control-label col-3" asp-for="YearlyInterestRate">Yearly Interest Rate:</label>
                <input class="form-control col-3" asp-for="YearlyInterestRate" />
                <span class="text-danger col" asp-validation-for="@Model.YearlyInterestRate"></span>
            </div>

            <div class="row">
                <label class="control-label col-3" asp-for="Years">Number Of Years:</label>
                <input class="form-control col-3" asp-for="Years" />
                <span class="text-danger col" asp-validation-for="@Model.Years"></span>
            </div>

            <div class="row">
                <label class="control-label col-3">Future Value:</label>
                <input value="@ViewBag.FutureValue" readonly class="form-control col-3" />
            </div>

            <div class="row">
                <div class="col-3">
                    <button class="btn btn-primary" type="submit">Calculate</button>
                    <a class="btn btn-secondary" asp-action="Index">Clear</a>
                </div>
            </div>

        </form>
    </main>
</div>